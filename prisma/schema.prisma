generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int     @id @default(autoincrement())
  username String     @unique
  email    String     @unique
  passwordHash String 
  passwordSalt String
  session String 
}

model Pet{
  id        Int       @id @default(autoincrement())
  name      String
  picture   Int
  description String
  breed     String
  color     String
  age       Int
}

model Profile{
  id        Int       @id @default(autoincrement())
  username  String
  picture   Int
  location  String
  language  String
  friend    Friends[]
}

model Friends{
  id      Int       @id @default(autoincrement())
  friend  String
  profile Profile[]
}